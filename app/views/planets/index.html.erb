<aside class="planet-list">
  <% @planets.each do |planet| %>
   <p id="planet-index">
     <div id="orb-container">
       <div id="orb-text-centered">
         <%= link_to planet.name, planet_path(planet.id) %>
       </div>
       <% unless planet.image == nil || planet.image.empty? || planet.name == 'Saturn' %>
         <%= link_to image_tag(planet.image, :alt => planet.name, :class => 'planet'), planet_path(planet.id) %>
       <% end %>
       <% if planet.name == 'Saturn' %>
         <%= link_to image_tag(planet.image, :alt => planet.name, :class => 'saturn'), planet_path(planet.id) %>
       <% end %>
    </div>
   </p>
  <% end %>
</aside>

